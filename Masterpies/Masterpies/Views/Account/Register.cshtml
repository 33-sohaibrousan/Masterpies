@model Masterpies.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layoutregester.cshtml";


}

<section class="signup">
    <!-- <img src="images/signup-bg.jpg" alt=""> -->
    <div class="container mt-5">
        <div class="signup-content">



            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "signup-form", role = "form" }))
            {

                @Html.AntiForgeryToken()
                <h2 class="form-title">Create account</h2>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                    <div class="col-12 col-sm-6">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-input" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-4 control-label" })
                    <div class="col-12 col-sm-6">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-input" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4 control-label" })
                    <div class="col-12 col-sm-6">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-input" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="form-submit" value="Register" />
                    </div>
                </div>


            }
        </div>
    </div>
</section>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
