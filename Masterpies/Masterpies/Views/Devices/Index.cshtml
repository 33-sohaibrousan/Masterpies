@model IEnumerable<Masterpies.Models.Device>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DeviceName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Devicebackground)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeviceImg2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeviceImg3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.step1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.step2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.step3)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DeviceName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            <img src="~/Content/@item.Devicebackground" width="100px" height="100px" />    
        </td>
        <td>
            <img src="~/Content/@item.DeviceImg2" width="100px" height="100px" />

        </td>
        <td>
            <img src="~/Content/@item.DeviceImg3" width="100px" height="100px" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.step1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.step2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.step3)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DeviceID }) |
            @Html.ActionLink("Details", "Details", new { id=item.DeviceID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.DeviceID })
        </td>
    </tr>
}

</table>
